@model IEnumerable<EventStreamingPlatform.Models.Genre>

@{
    ViewData["Title"] = "Genres";
}

<h2>Genres</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Recomandation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.Recomandation.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GenreId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GenreId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GenreId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>