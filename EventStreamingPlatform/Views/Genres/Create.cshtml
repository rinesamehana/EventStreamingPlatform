                <label asp-for="Recomandation" class="control-label"></label>
                <select asp-for="RecomandationId" class="form-control form-select" asp-items="ViewBag.RecomandationId">
                    <option value="">-- Select Recomandation --</option>
                </select>
                <span asp-validation-for="RecomandationId" class="text-danger" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
