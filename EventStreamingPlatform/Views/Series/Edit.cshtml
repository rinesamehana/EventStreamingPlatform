@model EventStreamingPlatform.Models.Serie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Serie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SerieId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
       <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table class="table">
                        <label asp-for="SerieSeasons" class="control-label">Seasons: </label>
                        <tr>
                            @{
                                int cnt = 0;
                                List<EventStreamingPlatform.Models.StreamingViewModel.AssignedSeasonData> seasons = ViewBag.Seasons;

                                foreach (var season in seasons)
                                {
                                    if (cnt++ % 4 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedSeasons"
                                               value="@season.SeasonId"
                                               @(Html.Raw(season.Assigned ? "checked=\"checked\"" : "")) />
                                                @season.Name
                                    @:</td>
                                }
                                @:</tr>
                            }
                    </table>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
