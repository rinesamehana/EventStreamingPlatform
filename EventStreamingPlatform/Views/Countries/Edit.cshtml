@model EventStreamingPlatform.Models.Country

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CountryId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Popullation" class="control-label"></label>
                <input asp-for="Popullation" class="form-control" />
                <span asp-validation-for="Popullation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abbreviation" class="control-label"></label>
                <input asp-for="Abbreviation" class="form-control" />
                <span asp-validation-for="Abbreviation" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="ISO_Code" class="control-label"></label>
                <input asp-for="ISO_Code" class="form-control" />
                <span asp-validation-for="ISO_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table class="table">
                        <label asp-for="CountryLanguages" class="control-label">Language: </label>
                        <tr>
                            @{
                                int cnt = 0;
                                List<EventStreamingPlatform.Models.StreamingViewModel.LanguageAssignedData> languages = ViewBag.Languages;

                                foreach (var language in languages)
                                {
                                    if (cnt++ % 4 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedLanguages"
                                               value="@language.LanguageId"
                                               @(Html.Raw(language.Assigned ? "checked=\"checked\"" : "")) />
                                                @language.Name
                                    @:</td>
                                }
                                @:</tr>
                            }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
