@model IEnumerable<EventStreamingPlatform.Models.Comment>

@{
    ViewData["Title"] = "Index";
}
<br />

<h2>Comments</h2>

<p>
    <a asp-area="User" asp-controller="Comments" asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Description
            </th>
            <th>
                CreatedDate
            </th>
            <th>
                LastUpdatedDate
            </th>
            <th>
                Film
            </th>
            <th>
                Author
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Film.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Id)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CommentId" asp-area="User" asp-controller="Comments" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CommentId" asp-area="User" asp-controller="Comments" class="btn btn-primary" >Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CommentId" asp-area="User" asp-controller="Comments"  class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
